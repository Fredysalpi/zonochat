# Variables de Entorno - Backend ZonoChat

# ===================================
# BASE DE DATOS
# ===================================
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=
DB_NAME=zonochat
DB_PORT=3306

# ===================================
# JWT AUTHENTICATION
# ===================================
JWT_SECRET=zonochat_super_secret_key_change_in_production_2025
JWT_EXPIRES_IN=7d

# ===================================
# SERVIDOR
